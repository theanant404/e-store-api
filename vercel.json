{
    "version": 2,
    "functions": {
        "api/**/*.ts": {
            "memory": 1024,
            "maxDuration": 10
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index.ts"
        }
    ]
}